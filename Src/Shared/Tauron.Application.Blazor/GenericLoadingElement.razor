<MudGrid Justify="Justify.Center">
    <MudItem lg="12">
        <CenterElement>
            <MudProgressCircular Indeterminate="true"/>
        </CenterElement>
    </MudItem>
    <MudItem lg="12">
        @if (CustomContent != null)
        {
            @CustomContent
        }
        else
        {
            <MudText Align="Align.Center">@Label</MudText>
        }
    </MudItem>
</MudGrid>

@code
{
    [Parameter]
    public string Label { get; set; } = "Laden...";

    [Parameter]
    public RenderFragment? CustomContent { get; set; }
}
