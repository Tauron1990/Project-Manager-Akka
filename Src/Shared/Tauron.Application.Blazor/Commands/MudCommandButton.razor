@inherits CommandContainer

<CascadingValue Value="CommandParameter" Name="@(nameof(CommandParameter))">
    <CascadingValue Value="Command" Name="@(nameof(Command))">
        <CommandHelper>
            <MudButton Disabled="@context.Disabled" OnClick="context.Execute">
                @ChildContent
            </MudButton>
        </CommandHelper>
    </CascadingValue>
</CascadingValue>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}