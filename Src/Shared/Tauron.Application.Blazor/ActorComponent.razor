@inherits ActorComponentBase<TModelType>
@using Autofac
@using Tauron.Application.CommonUI
@typeparam TModelType
@inject ILifetimeScope _lifetimeScope

<CascadingValue Value="Model">
    @ChildContent
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private IViewModel<TModelType>? _model;
    protected override IViewModel<TModelType> Model => _model ??= _lifetimeScope.Resolve<IViewModel<TModelType>>();

}