
@if (CanCancel)
{
    @if (string.IsNullOrWhiteSpace(Title))
    {
        <MudDialog>
            <DialogContent>
                <MudText>@Content</MudText>
            </DialogContent>
            <DialogActions>
                <MudButton OnClick="@CancelClick">Abbrechen</MudButton>
                <MudButton OnClick="@OkClick">Ok</MudButton>
            </DialogActions>
        </MudDialog>
    }
    else
    {
        <MudDialog>
            <TitleContent>
                <MudText Typo="Typo.h3">@Title</MudText>
            </TitleContent>
            <DialogContent>
                <MudText>@Content</MudText>
            </DialogContent>
            <DialogActions>
                <MudButton OnClick="@CancelClick">Abbrechen</MudButton>
                <MudButton OnClick="@OkClick">Ok</MudButton>
            </DialogActions>
        </MudDialog>
    }
}
else
{
    @if (string.IsNullOrWhiteSpace(Title))
    {
        <MudDialog>
            <DialogContent>
                <MudText>@Content</MudText>
            </DialogContent>
            <DialogActions>
                <MudButton OnClick="@OkClick">Ok</MudButton>
            </DialogActions>
        </MudDialog>
    }
    else
    {
        <MudDialog>
            <TitleContent>
                <MudText Typo="Typo.h3">@Title</MudText>
            </TitleContent>
            <DialogContent>
                <MudText>@Content</MudText>
            </DialogContent>
            <DialogActions>
                <MudButton OnClick="@OkClick">Ok</MudButton>
            </DialogActions>
        </MudDialog>
    }
}

@code {

    [Parameter]
    public Action<bool?>? ResultAction { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string Content { get; set; } = string.Empty;

    [Parameter]
    public bool CanCancel { get; set; }

    private void CancelClick() => ResultAction?.Invoke(false);

    private void OkClick() => ResultAction?.Invoke(true);
}
