
<MudContainer MaxWidth="MaxWidth.Medium">
    @if (!string.IsNullOrWhiteSpace(Title))
    {
        <MudText Typo="Typo.h3">@Title</MudText>
    }
    <MudText>@Content</MudText>
    @if (CanCancel)
    {
        <MudPaper Class="pa-4 justify-center my-4 mud-text-align-center">
            <MudButton OnClick="@CancelClick">Abbrechen</MudButton>
            <MudButton OnClick="@OkClick">Ok</MudButton>
        </MudPaper>
    }
    else
    {
        <MudButton OnClick="@OkClick">Ok</MudButton>
    }
</MudContainer>

@code {

    [Parameter]
    public Action<bool?>? ResultAction { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string Content { get; set; } = string.Empty;

    [Parameter]
    public bool CanCancel { get; set; }

    private void CancelClick() => ResultAction?.Invoke(false);

    private void OkClick() => ResultAction?.Invoke(true);
}
