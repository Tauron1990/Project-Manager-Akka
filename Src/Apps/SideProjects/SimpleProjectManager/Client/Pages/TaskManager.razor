@page "/TaskManager"

@using SimpleProjectManager.Client.Shared.Tasks
@using SimpleProjectManager.Client.Shared.Data

@inherits NonAutoRenderingComponent

@inject GlobalState GlobalState

<PageTitle>Task Manager</PageTitle>

<StateAwaiter State="_pendingTasks">
    <ObservableCollectionView SourceParameter="context">
        <EmptyRender>
            <MudText Align="Align.Center" Typo="Typo.h3">Aktuell Keine Aufgaben</MudText>
        </EmptyRender>
        <ListRender Context="items">
            <MudList>
                @foreach (var item in items)
                {
                    <MudListItem @key="item.Id">
                        <PendingTaskDisplay PendingTask="item"/>
                    </MudListItem>
                }
            </MudList>
        </ListRender>
    </ObservableCollectionView>
</StateAwaiter>