@page "/EditJob/{ProjectId}"
@inherits NonAutoRenderingView<EditJobViewModel>

<PageTitle>Job Beabeiten</PageTitle>

@if (ViewModel is not null)
{
    @if (string.IsNullOrWhiteSpace(ProjectId))
    {
        <MudText Typo="Typo.h3">Kein Job Id Angegeben</MudText>
    }
    else
    {
        <StateAwaiter State="ViewModel.State">
            <JobEditor Data="context" CanCancel="true" Configuration="@JobEditorConfiguration.EditJobConfig" Title="JobData Beabeiten"
                       Cancel="ViewModel.Cancel" Commit="ViewModel.Commit"/>
        </StateAwaiter>
    }
}
