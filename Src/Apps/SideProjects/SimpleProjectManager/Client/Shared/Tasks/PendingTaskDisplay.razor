@inherits NonAutoRenderingView<SimpleProjectManager.Client.Shared.ViewModels.Tasks.PendingTaskDisplayViewModel>

@if (ViewModel is not null && PendingTask is not null)
{
    <MudGrid>
        <MudItem lg="4">
            <MudText>Name: @PendingTask.Name</MudText>
        </MudItem>
        <MudItem lg="8">
            <MudText>Info: @PendingTask.Info</MudText>
        </MudItem>
        <MudItem lg="12">
            <MudGrid Justify="Justify.FlexEnd">
                <MudItem lg="4">
                    <MudCommandButton @ref="CancelButton">Abbrechen</MudCommandButton>
                </MudItem>
            </MudGrid>
        </MudItem>
    </MudGrid>
}