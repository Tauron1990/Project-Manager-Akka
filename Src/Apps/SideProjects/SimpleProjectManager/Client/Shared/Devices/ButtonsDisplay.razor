@using SimpleProjectManager.Shared.Services.Devices

<MudGrid>
    @if(Buttons.Count <= 3)
    {
        foreach (var button in Buttons)
        {
            <MudItem lg="@(12 / Buttons.Count)">
                <MudPaper Class="@(@"mud-width-full ma-2")">
                    <SingleButtonDisplay Button="button" DeviceId="@DeviceId"/>
                </MudPaper>
            </MudItem>
        }
    }
    else
    {
        foreach (var button in Buttons)
        {
            <MudItem lg="12">
                <MudPaper Class="mud-width-full ma-2">
                    <SingleButtonDisplay Button="button" DeviceId="DeviceId"/>
                </MudPaper>
            </MudItem>
        }
    }
</MudGrid>

@code {
    [Parameter]
    public ImmutableList<DeviceButton> Buttons { get; set; } = ImmutableList<DeviceButton>.Empty;

    [Parameter]
    public DeviceId? DeviceId { get; set; }
}