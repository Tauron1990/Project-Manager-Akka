@using SimpleProjectManager.Shared.Services.Devices
@if(UiGroup is not null)
{
    <MudGrid>
        @if(ShowCategory)
        {
            <MudItem lg="12">
                <MudText Typo="Typo.h4">@UiGroup.Category</MudText>
            </MudItem>
        }
        @foreach (var sensor in GroupToThree(UiGroup.Sensors))
        {
            <SensorsDisplay Sensors="sensor" DeviceId="DeviceId"/>
        }
        @foreach (var button in GroupToThree(UiGroup.DeviceButtons))
        {
            <ButtonsDisplay Buttons="button" DeviceId="DeviceId"/>
        }
        @foreach (DeviceUiGroup group in UiGroup.Ui)
        {
            <MudItem lg="12">
                <UIGroupDisplayCarrier UiGroup="group" DeviceId="DeviceId"/>
            </MudItem>
        }
    </MudGrid>
}
else
{
    <MudText>Keine Gruppe Zur Verfügung gestellet</MudText>
}