@using SimpleProjectManager.Shared.Services.Devices
<MudGrid>
    @if(Sensors.Count <= 3)
    {
        foreach (var sensor in Sensors)
        {
            <MudItem lg="@(12 / Sensors.Count)">
                <MudPaper Class="@(@"mud-width-full ma-2")">
                    <SingleSensorDisplay Sensor="sensor" DeviceId="@DeviceId"/>
                </MudPaper>
            </MudItem>
        }
    }
    else
    {
        foreach (var sensor in Sensors)
        {
            <MudItem lg="12">
                <MudPaper Class="mud-width-full ma-2">
                    <SingleSensorDisplay Sensor="sensor" DeviceId="DeviceId"/>
                </MudPaper>
            </MudItem>
        }
    }
</MudGrid>

@code {
    [Parameter]
    public ImmutableList<DeviceSensor> Sensors { get; set; } = ImmutableList<DeviceSensor>.Empty;

    [Parameter]
    public DeviceId? DeviceId { get; set; }
}