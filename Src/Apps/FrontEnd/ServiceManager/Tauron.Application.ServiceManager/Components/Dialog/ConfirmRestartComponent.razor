@using System.Reactive.Subjects

@implements IDisposable

@inherits GenericDialogBase<bool, System.Reactive.Unit>

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h3">Neustart</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Zum anwenden der Aktion ist ein neustart erforderlich</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CancelCallback">Abbrechen</MudButton>
        <MudButton OnClick="AcceptCallback">Neustart</MudButton>
    </DialogActions>
</MudDialog>

@code {

    private readonly Subject<bool> _subject = new();

    protected override IObservable<bool> Show() => _subject;

    public void Dispose() => _subject.Dispose();

    private void CancelCallback() => _subject.OnNext(false);

    private void AcceptCallback() => _subject.OnNext(true);

}
