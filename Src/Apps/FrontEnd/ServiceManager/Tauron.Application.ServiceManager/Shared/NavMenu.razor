
@inherits ConnectionAwareComponent

<MudDivider Class="mb-4"></MudDivider>
<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Class="ma-1">Übersicht</MudNavLink>
    <MudBadge Icon="@_configError" Overlap="true" Class="ma-1">
        <MudNavLink Href="/AppConfiguration">Konfiguration</MudNavLink>
    </MudBadge>
</MudNavMenu>

@code {

    private string? _configError;
    
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

    protected override void OnParametersSet() 
        => _configError = IsDatabaseReady ? null : Icons.Material.Filled.Warning;

}
