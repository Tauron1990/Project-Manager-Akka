<AuthorizeView Roles="@(string.Join(',', Claims))">
    <Authorized>
        <AboutView/>
    </Authorized>
    <Authorizing>
        <AuthorizingView/>
    </Authorizing>
    <NotAuthorized>
        <GenericNotAuthorizedView Claims="Claims"/>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public IEnumerable<string> Claims { get; set; } = Array.Empty<string>();

    [Parameter]
    public RenderFragment ChildContent { get; set; } = _ => { };

}
