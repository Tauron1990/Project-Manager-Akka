@if (Item != null)
{
    <MudCard>
        <MudCardHeader>Basis Info:</MudCardHeader>
        <MudCardContent Class="d-flex flex-column">
            <MudTextField @bind-Value="ActualName" Label="Name" Clearable="true"/>
            <MudCheckBox @bind-Checked="Item.Excluding" Color="Color.Primary" Label="Invertiren"></MudCheckBox>
            <MudTextField @bind-Value="Item.Order" Label="Reihenfolge"/>
        </MudCardContent>
    </MudCard>
}

@code {

    [Parameter]
    public ElementItem? Item { get; set; }

    private string ActualName
    {
        get
        {
            if (Item == null)
                return string.Empty;

            return string.IsNullOrWhiteSpace(Item.Name) || Item.Name.StartsWith(ElementItem.IdPrefix) ? string.Empty : Item.Name;
        }
        set
        {
            if (Item != null)
                Item.Name = value;
        }
    }

}