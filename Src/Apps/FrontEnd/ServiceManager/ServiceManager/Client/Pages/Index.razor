@page "/"

@inject IndexViewModel _model
@inherits PropertyChangedComponent

<Title Value="Knoten"/>

    <MudText Typo="Typo.h4" Class="m-1">Aktuelle Knoten:</MudText>

<MudList>
    @foreach (var info in _model.NodeInfos)
    {
        <MudListItem>
            <ClusterNodeInfoView @key=info.Key NodeInfo="@info.Value"/>
        </MudListItem>
    }
</MudList>

@code
{
    protected override async Task OnInitializedAsync() => await Track(_model);
}

