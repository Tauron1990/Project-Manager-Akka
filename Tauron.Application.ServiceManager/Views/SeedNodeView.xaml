             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tauron.Application.ServiceManager.Views"
             xmlns:tau="http://schemas.TauronWpf.com"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Content="Hinzufügen" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
        <Button Grid.Row="0" Grid.Column="1" Content="Entfernen" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
        <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <TextBlock Text="Test"></TextBlock>
        </ListBox>
    </Grid>
</tau:UserControl>
